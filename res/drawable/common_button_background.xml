<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true">
    <shape android:shape="rectangle">
      <corners android:radius="@dimen/common_button_radius" />
      <stroke android:width="1dp" android:color="@color/common_button_stroke_color_pressed" />
      <solid android:color="@color/common_button_background_pressed"/>
    </shape>
  </item>
  
  <item>
    <shape android:shape="rectangle">
      <corners android:radius="@dimen/common_button_radius" />
      <stroke android:width="1dp" android:color="@color/common_button_stroke_color_default" />
      <solid android:color="@color/common_button_background_default"/>
    </shape>
  </item>
</selector>
